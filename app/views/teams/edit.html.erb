<h1>Edit <%= @team.team_name %></h1>

<h2>Edit Roster</h2>

<form action=<%= "/teams/#{@team.id}/edit" %> method="post">
  <input type="hidden" name="_method" value="patch">
  <% @players.each do |player| %>
  <p><%= player.name %> <input type="checkbox" name="player[name][]" value=<%= player.name %> <%= "checked" if player.team == @team %>></p>
  <% end %>
  <h2>Update Record:</h2>
  <p>Wins: <input type="text" name="team[wins]" value=""></p>
  <p>Losses: <input type="text" name="team[losses]" value=""></p>
  <input type="submit" name="submit" value="Submit Changes">
</form>
